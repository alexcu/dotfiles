#!/usr/bin/env bash

set -e

status=$1
message="${2:-Build}"

function notify() {
    message=$1
    icon=$2
    title="ğŸš§ $icon Task Status"
    sound=$3
    /usr/bin/osascript -e "display notification \"$message\" with title \"$title\" sound name \"$sound\""
}

# For dev that accepts last command arg 0 for success and 1 for failure
if [[ $status -eq 0 ]]; then
    notify "$message Passed" "âœ…" "Glass"
else
    notify "$message Failed" "âŒ" "Basso"
fi
